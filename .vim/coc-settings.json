{
    "diagnostic": {
        "enable":      true,
        "level":       "hint",
        "errorSign":   "Ｅ",
        "warningSign": "Ｗ",
        "infoSign":    "Ｉ",
        "hintSign":    "Ｈ"
    },
    "coc": {
        "preferences": {
            "jumpCommand": "edit",
            "formatOnSaveFiletypes": [
                "cpp",
                "c"
            ]
        }
    },
    "intelephense": {
        "environment": {
            "includePaths": [
                ".phpstorm.meta.php",
                "_ide_helper.php",
                "_ide_helper_models.php"
            ]
        },
        "diagnostics" : {
            "deprecated": false
        }
    },
    "phpls": {
        "enable": false
    },
    "phpactor": {
        "enable": true,
        "path": "/home/yosuke/.vim/dein/repos/github.com/phpactor/phpactor/bin/phpactor"
    },
    "languageserver": {
        "kotlin": {
            "command": "~/.vim/dein/repos/github.com/fwcd/kotlin-language-server/server/build/install/server/bin/kotlin-language-server",
            "filetypes": ["kotlin"]
        },
        "phpactor": {
            "command": "/home/yosuke/.vim/dein/repos/github.com/phpactor/phpactor/bin/phpactor",
            "args": ["language-server"],
            "trace.server": "verbose",
            "filetypes": ["php"]
        }
    },
    "clangd.path": "~/.config/coc/extensions/coc-clangd-data/install/13.0.0/clangd_13.0.0/bin/clangd"
}
